<?xml version="1.0" encoding="UTF-8"?>
<ecore:EPackage
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore"
    name="security"
    nsURI="http://krosskube/kubernetes/security"
    nsPrefix="security">

  <!-- Role-->
  <eClassifiers xsi:type="ecore:EClass" name="Role"/>
  <!-- Service Account -->
  <eClassifiers xsi:type="ecore:EClass" name="ServiceAccount"/>

  <!-- Role Binding -->
  <eClassifiers xsi:type="ecore:EClass" name="RoleBinding">
    <eAnnotations source="http://www.eclipse.org/emf/2002/Ecore">
      <details key="constraints" value="roleRefRequired subjectsRequired"/>
    </eAnnotations>
    <eAnnotations source="http://www.eclipse.org/emf/2002/Ecore/OCL/Pivot">
      <details key="roleRefRequired" value="not role.oclIsUndefined()"/>
      <details key="subjectsRequired" value="not serviceAccount.oclIsUndefined()"/>
    </eAnnotations>
    <eStructuralFeatures xsi:type="ecore:EReference"
        name="role"
        eType="#//Role"/>
    <eStructuralFeatures xsi:type="ecore:EReference"
        name="serviceAccount"
        eType="#//ServiceAccount"/>
  </eClassifiers>

</ecore:EPackage>
